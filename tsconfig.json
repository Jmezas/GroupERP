{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "outDir": "./cache",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_module","cache","dist","reports"],
  "include": ["src/**/*.ts"]
}
